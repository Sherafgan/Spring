<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config/>

    <bean id="triangle" class="me.sherafgan.spring.core.r_messagesource.Triangle">
        <property name="pointA" ref="pointA"/>
        <property name="pointB" ref="pointB"/>
        <property name="pointC" ref="pointC"/>
    </bean>

    <bean id="pointA" class="me.sherafgan.spring.core.r_messagesource.Point">
        <!--<qualifier value="circleRelated"/>-->
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="pointB" class="me.sherafgan.spring.core.r_messagesource.Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="pointC" class="me.sherafgan.spring.core.r_messagesource.Point">
        <property name="x" value="20"/>
        <property name="y" value="0"/>
    </bean>

    <context:component-scan base-package="me.sherafgan.spring.core.r_messagesource"/>
</beans>