<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="parenttriangle" class="me.sherafgan.spring.core.i_beandefinheritance.Triangle" abstract="true">
        <property name="points">
            <list>
                <ref bean="pointA"/>
            </list>
        </property>
    </bean>

    <bean id="triangle1" class="me.sherafgan.spring.core.i_beandefinheritance.Triangle" parent="parenttriangle">
        <property name="points">
            <list merge="true">
                <ref bean="pointB"/>
                <ref bean="pointC"/>
            </list>
        </property>
    </bean>

    <bean id="triangle2" class="me.sherafgan.spring.core.i_beandefinheritance.Triangle" parent="parenttriangle">
        <property name="points">
            <list merge="true">
                <ref bean="pointB"/>
            </list>
        </property>
    </bean>

    <bean id="pointA" class="me.sherafgan.spring.core.i_beandefinheritance.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="pointB" class="me.sherafgan.spring.core.i_beandefinheritance.Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="pointC" class="me.sherafgan.spring.core.i_beandefinheritance.Point">
        <property name="x" value="20"/>
        <property name="y" value="0"/>
    </bean>
</beans>