<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop
	http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config/>

    <aop:aspectj-autoproxy/>

    <bean name="triangle" class="me.sherafgan.spring.aop.firstaspect.model.Triangle">
        <property name="name" value="Triangle name"/>
    </bean>

    <bean name="circle" class="me.sherafgan.spring.aop.firstaspect.model.Circle">
        <!--<property name="name" value="Circle name"/>-->
    </bean>

    <bean name="shapeService" class="me.sherafgan.spring.aop.firstaspect.service.ShapeService" autowire="byName"/>

    <bean name="LoggingAspect" class="me.sherafgan.spring.aop.firstaspect.aspect.LoggingAspect"/>

</beans>